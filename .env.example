# ===== MCP CALENDLY STREAMING SERVER CONFIG =====
# Copy this file to .env and fill in your actual values

# Calendly API Configuration (REQUIRED)
CALENDLY_ACCESS_TOKEN=your_calendly_personal_access_token_here
CALENDLY_API_BASE_URL=https://api.calendly.com
CALENDLY_ORGANIZATION_URI=https://api.calendly.com/organizations/your_org_id

# Application Settings
NODE_ENV=production
HTTP_MODE=true
PORT=3000
LOG_LEVEL=info

# Security Settings (GENERATE SECURE VALUES)
JWT_SECRET=generate_a_secure_32_character_minimum_jwt_secret_key
ENCRYPTION_KEY=generate_a_secure_32_character_minimum_encryption_key

# Streaming Configuration
MAX_CONNECTIONS=100
HEARTBEAT_INTERVAL=10000
CONNECTION_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# CORS (Adjust for your domain)
CORS_ORIGINS=https://your-domain.com,https://your-app.easypanel.io

# Audit & Logging
AUDIT_LOG_RETENTION_DAYS=30
AUDIT_MAX_LOG_SIZE_MB=100

# Development Settings (Set to false in production)
DEBUG_MODE=false
VERBOSE_LOGGING=false